{# @todo: make a proper theme suggetsion for the search button. #}
{% if (attributes.hasClass('icon-zoek')) %}
<button{{ attributes.setAttribute('type', 'submit')}}> <span class="sr-only">{{ attributes.value }}</span></button>{{ children }}
{% else %}
  <input{{ attributes }} />{{ children }}
{% endif %}
