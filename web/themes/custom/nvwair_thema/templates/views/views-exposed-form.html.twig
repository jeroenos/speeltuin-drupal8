{#
/**
 * @file
 * Default theme implementation of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 *
 * @ingroup themeable
 */
#}
{% if q is not empty %}
    {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
    {{ q }}
{% endif %}
{% if form['#id'] == "views-exposed-form-inspectieresultaten-block-1" %}
<div class="formWrapper">
<fieldset id="filters">
<legend>Filters</legend>
<div id="toezichtFilter" class="filters-wrapper">
{{ form }}
<div class="view">
    <label for="">Weergave</label>
    <a href="#" class="list listMapSwitch is-active">Lijst</a>
<a href="#" class="map listMapSwitch">Kaart</a>
</div>
</div>
</fieldset>
</div>
{% else %}
{{form}}
{% endif %}


